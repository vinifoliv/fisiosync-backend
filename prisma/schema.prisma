generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// Entities
model User {
  id             Int                 @id @default(autoincrement())
  name           String
  email          String              @unique
  password       String
  musicalGenders UserMusicalGender[]
  scaleId        Int
  scale          ParkinsonScale      @relation(fields: [scaleId], references: [id])
}

model MusicalGender {
  id    Int                 @id @default(autoincrement())
  name  String              @unique
  users UserMusicalGender[]
}

model ParkinsonScale {
  id    Int    @id @default(autoincrement())
  range Int[] // appropriate BPM interval
  user  User[]
}

// Relations
model UserMusicalGender {
  userId   Int
  user     User          @relation(fields: [userId], references: [id])
  genderId Int
  gender   MusicalGender @relation(fields: [genderId], references: [id])

  @@id([userId, genderId])
}
